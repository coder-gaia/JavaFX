<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300" prefWidth="400" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ViewController">
   <children>
      <Label layoutX="28.0" layoutY="28.0" text="Calculate Sum" textAlignment="CENTER" textOverrun="CLIP">
         <font>
            <Font name="Arial" size="25.0" />
         </font>
      </Label>
      <TextField fx:id="txtNumber1" layoutX="25.0" layoutY="86.0" promptText="First number" />
      <TextField fx:id="txtNumber2" layoutX="24.0" layoutY="124.0" promptText="Second number" />
      <Button fx:id="buttonSum" layoutX="24.0" layoutY="168.0" mnemonicParsing="false" onAction="#onButtonSumAction" text="Sum" />
      <Label layoutX="24.0" layoutY="211.0" text="Result = ">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Label fx:id="labelResult" layoutX="85.0" layoutY="211.0" />
   </children>
</AnchorPane>
